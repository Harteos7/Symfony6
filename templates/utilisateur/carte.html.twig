{% extends 'base.html.twig' %}

{% block title %}Menus{% endblock %}

{% block section %}
{% block body %}

{# {% if app.request.uri == url('app_menus') %}  Ce if est pour vérifier que la page ou nous somme est la même que la page app_menus #}
{#  {% set comp = 1 %}  Ce set est pour initialiser la variable comp (c'est fais dans le controlleur) #}

{% for menu in menus %}
  {% if menu.id == comp %}
  {{ comp }}
    <section class=" slider_section position-relative">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
            <div class="carousel-item active">
            <div class="slider_item-box">
              <div class="slider_item-container">
                <div class="container">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="slider_item-detail">
                        <div>
                          <h1>
                            {{ menu.nom }}
                          </h1>
                          <p>
                            {{ menu.description }}
                          </p>
                          <div class="d-flex">
                            <a href="{{ path('app_cartechoix', { id: menu.id}) }}">
                              Miam
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="slider_img-box">
                        <div>
                        <a href="{{ path('app_cartechoix', { id: menu.id}) }}">
                          <img src={{ menu.image }} width="220px" />
                        </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            </div>
            </div>
            {% endif %}  
          <div class="custom_carousel-control">
          <a class="carousel-control-prev" href="#" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
            {% set comp = comp - 1 %}
          </a>
          {{ comp }}
          <a class="carousel-control-next" href="#" role="button" data-slide="next">
            <span class="sr-only">Next</span>
            {% set comp = comp + 1 %}
          </a>
          {{ comp }}
        </div>
        </div>
    </section>
  {% endfor %}
{% endblock %}
{% endblock %}