<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="build/images/favicon.ico" type="image/x-icon">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
                <!-- slider stylesheet -->
        <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.3/assets/owl.carousel.min.css" />

        <!-- bootstrap core css -->
        <link rel="stylesheet" type="text/css" href="build/css/bootstrap.css" />

        <!-- fonts style -->
        <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet" />
        <!-- Custom styles for this template -->
        <link href="build/css/style.css" rel="stylesheet" />
        <!-- responsive style -->
        <link href="build/css/responsive.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
        <link rel="icon" href="build/images/favicon.ico" type="image/x-icon">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar">
            <a href="{{ path('app_utilisateur') }}" >Miam chez moi</a><br>
            {% if app.user.userIdentifier is defined %}
            <a href="{{ path('app_login') }}" >Panier</a><br>
            {% endif %}
            <a href="{{ path('app_menus') }}" >A la carte</a><br>
            <a href="#" >Suivie des commandes</a><br>
            <a href="#" >Mention l√©gal</a><br>
            <a href="#" >Aide</a><br>
            {% if not app.user.userIdentifier is defined %}
            <a href="{{ path('app_login') }}" >Connexion</a><br>
            {% endif %}
            {% if app.user.userIdentifier is defined %}
            <h class="user">{{ app.user.userIdentifier }}</h>
            <a href="{{ path('app_logout') }}">Logout</a>
            {% endif %}
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
